{
  // ğŸ”§ ConfiguraciÃ³n base y plugins comunes
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:eslint-comments/recommended",
    "airbnb",
    "airbnb-typescript",
    "next/core-web-vitals",
    "plugin:prettier/recommended" // âœ… Integra Prettier con ESLint
  ],

  // ğŸ§  Parser de TypeScript
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "."
  },

  // âš™ï¸ Resolver de imports para TypeScript
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": true
    }
  },

  // ğŸš« Reglas personalizadas
  "rules": {
    // -----------------------------
    // ğŸ§© Estilo general
    // -----------------------------
    "quotes": ["error", "double"], // âœ… Comillas dobles permitidas
    "semi": ["error", "never"], // âœ… Sin punto y coma
    "no-console": ["warn", { "allow": ["warn", "error"] }], // âš ï¸ Permite console.warn/error
    "no-unused-vars": "off", // ğŸš« Desactiva regla JS nativa
    "@typescript-eslint/no-unused-vars": ["warn"], // âœ… Usa la de TS, mÃ¡s precisa

    // -----------------------------
    // âš›ï¸ React
    // -----------------------------
    "react/react-in-jsx-scope": "off", // âœ… Next.js importa React automÃ¡ticamente
    "react/jsx-filename-extension": ["warn", { "extensions": [".tsx"] }], // âš›ï¸ Solo TSX
    "react/require-default-props": "off", // âœ… No necesario con TS
    "react/prop-types": "off", // âœ… TS ya valida tipos
    "react/function-component-definition": [
      "error",
      { "namedComponents": ["function-declaration", "arrow-function"] }
    ],
    "react/jsx-props-no-spreading": [
      "warn",
      {
        "exceptions": [
          "input",
          "textarea",
          "select",
          "Form.Control",
          "Form.Check",
          "Form.Select",
          "Form.Switch"
        ]
      }
    ],

    // -----------------------------
    // ğŸ§± Importaciones
    // -----------------------------
    "import/prefer-default-export": "off", // âœ… Permite exportaciones nombradas
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/*.test.tsx", "**/*.spec.ts", "**/setupTests.ts"] }
    ],

    // -----------------------------
    // ğŸ¦º TypeScript
    // -----------------------------
    "@typescript-eslint/explicit-module-boundary-types": "off", // ğŸ”§ Menos ruido
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "semi",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "semi",
          "requireLast": false
        }
      }
    ],

    // -----------------------------
    // ğŸ—£ï¸ Comentarios y etiquetas
    // -----------------------------
    "eslint-comments/no-unused-disable": "error"
  }
}
